<milestone unit="juan" n="1"/>
<pb ed="X" xml:id="X60.1132.0708b" n="0708b"/>
<lb ed="X" n="0708b01"/>
<lb ed="X" n="0708b02"/>
<lb ed="X" n="0708b03"/>
