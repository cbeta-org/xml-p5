<milestone unit="juan" n="1"/>
<pb ed="X" xml:id="X60.1130.0697b" n="0697b"/>
<lb ed="X" n="0697b01"/>
<lb ed="X" n="0697b02"/>
<lb ed="X" n="0697b03"/>
