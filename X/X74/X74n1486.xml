<milestone unit="juan" n="1"/>
<pb ed="X" xml:id="X74.1486.0584b" n="0584b"/>
<lb ed="X" n="0584b01"/>
<lb ed="X" n="0584b02"/>
<lb ed="X" n="0584b03"/>
