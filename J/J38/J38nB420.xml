<lb ed="J" n="0553a15"/><item xml:id="itemJ38p0553a1501">小參<note place="inline">二則</note></item>
<lb ed="J" n="0553a16"/><item xml:id="itemJ38p0553a1601">茶話<note place="inline">一則</note></item>
<lb ed="J" n="0553a17"/><item xml:id="itemJ38p0553a1701">機緣<note place="inline">五則</note></item>
<lb ed="J" n="0553a18"/><item xml:id="itemJ38p0553a1801">頌古<note place="inline">一則</note></item>
<lb ed="J" n="0553a19"/><item xml:id="itemJ38p0553a1901">印偈<note place="inline">十一首</note></item>
