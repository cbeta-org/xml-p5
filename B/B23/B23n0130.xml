<text><body>
<milestone unit="juan" n="1"/>
<pb ed="B" xml:id="B23.0130.0425a" n="0425a"/>
<lb ed="B" n="0425a01"/><cb:mulu type="卷" n="1"></cb:mulu>
<lb ed="B" n="0425a02"/>
