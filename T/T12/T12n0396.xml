<app from="#beg1118063" to="#end1118063"><lem wit="#wit1">世尊</lem><rdg wit="#wit2 #wit3" resp="#resp1"><space quantity="0"/></rdg></app>
<app from="#beg1118064" to="#end1118064"><lem wit="#wit1">其必有</lem><rdg wit="#wit2 #wit4 #wit5 #wit3" resp="#resp1">必有緣</rdg></app>
<app from="#beg1119001" to="#end1119001"><lem wit="#wit1">鞠</lem><rdg wit="#wit2 #wit4 #wit5 #wit3" resp="#resp1">救</rdg></app>
<app from="#beg1119002" to="#end1119002"><lem wit="#wit1">恩</lem><rdg resp="#resp1" wit="#wit4 #wit5">思</rdg></app>
<app from="#beg1119003" to="#end1119003"><lem resp="#resp3" wit="#wit6 #wit7">損<note type="cf1">K14n0520_p0056a17</note></lem><rdg wit="#wit1">捐</rdg><rdg resp="#resp1" wit="#wit2 #wit3">損</rdg></app>
