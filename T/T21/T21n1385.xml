<lb n="0905b29" ed="T"/>埵<note place="inline">引</note>曩<note place="inline">引</note>尾囉<note place="inline">引</note>誐室哩<note place="inline">二合引</note>瑟吒<note place="inline">二合十二</note>薩哩嚩
<pb n="0905c" xml:id="T21.1385.0905c" ed="T"/>
